<% if flash[:notice] != nil %>
	<div class="row">
		<div class="col-md-6 col-md-offset-3" id="notice-box">
			<%= flash[:notice] %>
		</div>
	</div>
<% end %>
<div class="row" id="submission_row">
	<div class="col-md-6 col-md-offset-3" id="submission_box">
		<div class="form-container">
			<h4><em>See Who Likes You<em></h4>
				<div class="form-horizontal">
				<%= form_tag index_path, remote: true do %>
					<div class="form-group">	
						<%= label_tag :name %>
						<%= text_field_tag :name, nil, placeholder: '@trustfuel' %>
					</div>
					<div class="form-group">
						<%= label_tag :limit %>
						<%= number_field_tag :limit, nil, placeholder: 10 %>
					</div>
					<%= submit_tag "Search", class: "btn btn-default" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<div id="tweet_table">
</div>
	