<% if flash[:notice] != nil %>
	<div class="row">
		<div class="col-md-6 col-md-offset-3" id="notice-box">
			<%= flash[:notice] %>
		</div>
	</div>
<% end %>
<div class="row" id="submission_row">
	<div class="col-md-6 col-md-offset-3" id="submission_box">
		<div class="form-container">
			<h4><em>See Who Likes You<em></h4>
				<div class="form-horizontal">
				<%= form_tag index_path do %>
					<div class="form-group">	
						<%= label_tag :name %>
						<%= text_field_tag :name, nil, placeholder: '@trustfuel' %>
					</div>
					<div class="form-group">
						<%= label_tag :limit %>
						<%= number_field_tag :limit, nil, placeholder: 10 %>
					</div>
					<%= submit_tag "Search", class: "btn btn-default" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% if @positive_tweets != nil %>
	<div class="row" id="table-row" onload="arrangeTable();">
		<div class="col-md-12" id="table-col">
			<table class="table">
				<thead>
					<tr>
						<h4><strong>Positive Tweets for <%= @name %></strong></h4>
					</tr>
					<tr>
						<th>User</th>
						<th>Tweet</th>
						<th>Link</th>
					</tr>
				</thead>
				<tbody>
					<% @positive_tweets.each do |k,v| %>
						<tr>
							<td><%= k %></td>
							<td><%= v[0] %></td>
							<td><a href="<%= v[1] %>">Link</a></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
<% end %>